
@model Clinic_Web.Models.Patient

@{
    ViewData["Title"] = "Utwórz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <body>
        <meta charset="utf-8" />

        <h1>Utwórz</h1>

        <h4>Pacjent</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"> </label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pesel" class="control-label"></label>
                        <input asp-for="Pesel" class="form-control" />
                        <span asp-validation-for="Pesel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Utwórz" class="btn btn-primary" />
                    </div>


                    @if (ViewBag.Message != null)
                    {
                        <script charset="UTF-8" type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
                        </script>
                    }


                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Cofnij</a>
        </div>
    </body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
        
    
}
